@model FilmDatabaseApp.Models.Movie

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">@Html.DisplayFor(model => model.Title)</h3>
    </div>
    <div class="panel-body">
        Director: @Html.DisplayFor(model => model.Director.Name)<br />
        Genre: @Html.DisplayFor(model => model.Genre.Type)<br />
        Release Date: @Html.DisplayFor(model => model.ReleaseDate) <br />
        Rotten Tomatoes Score: @Html.DisplayFor(model => model.RTScore)<br />
        Rating: @Html.DisplayFor(model => model.Rating)<br />
        Award Winner: @Html.DisplayFor(model => model.WonAward)
        <p>
            @Html.ActionLink("Edit", "Edit", new { id = Model.MovieID }) |
            @Html.ActionLink("Back to List", "Index")
        </p>
    </div>
</div>

